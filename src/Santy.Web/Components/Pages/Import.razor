@page "/import"
@using Santy.Web.Services
@using Microsoft.AspNetCore.Components.Forms
@inject SantyOperationsService OperationsService
@inject AppStateService StateService
@implements IDisposable

<PageTitle>Import - Santy</PageTitle>

<h1>Import Remote Inventory</h1>

<div class="import-container">
    <div class="upload-section">
        <h3>Upload JSONL Inventory File</h3>
        <InputFile OnChange="@HandleFileSelected" accept=".jsonl,.json" class="file-input" />
        
        @if (selectedFileName != null)
        {
            <div class="file-selected">
                <strong>Selected:</strong> @selectedFileName (@fileSize KB)
            </div>
        }

        <button class="btn btn-primary" @onclick="StartImport" 
                disabled="@(StateService.IsImportRunning || fileContent == null)">
            @(StateService.IsImportRunning ? "Importing..." : "Import Assets")
        </button>
    </div>

    @if (!string.IsNullOrEmpty(StateService.CurrentOperation) && StateService.IsImportRunning)
    {
        <div class="status-message running">
            <strong>@StateService.CurrentOperation</strong>
        </div>
    }

    @if (!string.IsNullOrEmpty(StateService.LastError))
    {
        <div class="status-message error">
            <strong>Error:</strong> @StateService.LastError
        </div>
    }

    @if (StateService.ImportInfo.LastImportTime.HasValue)
    {
        <div class="import-info">
            <h3>Last Import Results</h3>
            <div class="info-row">
                <span class="label">Import Time:</span>
                <span class="value">@StateService.ImportInfo.LastImportTime.Value.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</span>
            </div>
            <div class="info-row">
                <span class="label">Assets Imported:</span>
                <span class="value">@StateService.ImportInfo.AssetsImported</span>
            </div>
        </div>
    }
    else
    {
        <div class="empty-state">
            <p>No imports have been performed yet.</p>
            <p>Upload a JSONL file containing remote asset inventory.</p>
        </div>
    }
</div>

<style>
    .import-container {
        margin-top: 20px;
    }

    .upload-section {
        background-color: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 4px;
        padding: 20px;
        margin-bottom: 20px;
    }

    .upload-section h3 {
        margin-top: 0;
        margin-bottom: 15px;
    }

    .file-input {
        display: block;
        margin-bottom: 15px;
        padding: 10px;
        width: 100%;
        max-width: 500px;
    }

    .file-selected {
        padding: 10px;
        background-color: #d1ecf1;
        border: 1px solid #bee5eb;
        border-radius: 4px;
        margin-bottom: 15px;
        color: #0c5460;
    }

    .btn {
        padding: 12px 24px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
        font-weight: bold;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
    }

    .btn-primary:hover:not(:disabled) {
        background-color: #0056b3;
    }

    .btn:disabled {
        background-color: #6c757d;
        cursor: not-allowed;
        opacity: 0.6;
    }

    .status-message {
        padding: 12px;
        border-radius: 4px;
        margin-bottom: 20px;
    }

    .status-message.running {
        background-color: #d1ecf1;
        border: 1px solid #bee5eb;
        color: #0c5460;
    }

    .status-message.error {
        background-color: #f8d7da;
        border: 1px solid #f5c6cb;
        color: #721c24;
    }

    .import-info {
        background-color: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 4px;
        padding: 20px;
        margin-top: 20px;
    }

    .import-info h3 {
        margin-top: 0;
        margin-bottom: 15px;
    }

    .info-row {
        display: flex;
        padding: 8px 0;
        border-bottom: 1px solid #dee2e6;
    }

    .info-row:last-child {
        border-bottom: none;
    }

    .info-row .label {
        font-weight: bold;
        width: 150px;
    }

    .info-row .value {
        flex: 1;
    }

    .empty-state {
        background-color: #f8f9fa;
        border: 2px dashed #dee2e6;
        border-radius: 4px;
        padding: 40px;
        text-align: center;
        color: #6c757d;
        margin-top: 20px;
    }
</style>

@code {
    private string? selectedFileName;
    private long fileSize;
    private string? fileContent;

    protected override void OnInitialized()
    {
        StateService.OnChange += StateHasChanged;
    }

    private async Task HandleFileSelected(InputFileChangeEventArgs e)
    {
        var file = e.File;
        selectedFileName = file.Name;
        fileSize = file.Size / 1024; // Convert to KB

        try
        {
            // Read file content (max 10MB)
            const long maxFileSize = 10 * 1024 * 1024;
            using var stream = file.OpenReadStream(maxFileSize);
            using var reader = new StreamReader(stream);
            fileContent = await reader.ReadToEndAsync();
        }
        catch (Exception ex)
        {
            StateService.LastError = $"Failed to read file: {ex.Message}";
            StateService.NotifyStateChanged();
            fileContent = null;
        }
    }

    private async Task StartImport()
    {
        if (fileContent == null)
        {
            return;
        }

        await OperationsService.ImportRemoteAsync(fileContent);
        
        // Clear the file selection after successful import
        if (StateService.ImportInfo.LastImportTime.HasValue)
        {
            selectedFileName = null;
            fileContent = null;
            fileSize = 0;
        }
    }

    public void Dispose()
    {
        StateService.OnChange -= StateHasChanged;
    }
}
