@page "/diff"
@using Santy.Web.Services
@using Santy.Core.Models
@using System.Text.Json
@inject SantyOperationsService OperationsService
@inject AppStateService StateService
@inject IJSRuntime JSRuntime
@implements IDisposable

<PageTitle>Diff - Santy</PageTitle>

<h1>Diff Analysis</h1>

<div class="diff-container">
    <div class="diff-actions">
        <button class="btn btn-primary" @onclick="StartDiff" disabled="@StateService.IsDiffRunning">
            @(StateService.IsDiffRunning ? "Computing Diff..." : "Run Diff")
        </button>

        @if (StateService.DiffInfo.Results.Any())
        {
            <button class="btn btn-secondary" @onclick="ExportResults">
                Export Results (JSONL)
            </button>
        }
    </div>

    @if (!string.IsNullOrEmpty(StateService.CurrentOperation) && StateService.IsDiffRunning)
    {
        <div class="status-message running">
            <strong>@StateService.CurrentOperation</strong>
        </div>
    }

    @if (!string.IsNullOrEmpty(StateService.LastError))
    {
        <div class="status-message error">
            <strong>Error:</strong> @StateService.LastError
        </div>
    }

    @if (StateService.DiffInfo.LastDiffTime.HasValue)
    {
        <div class="diff-summary">
            <h3>Diff Summary</h3>
            <div class="summary-row">
                <span class="label">Last Run:</span>
                <span class="value">@StateService.DiffInfo.LastDiffTime.Value.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</span>
            </div>
            <div class="summary-stats">
                <div class="stat-box present">
                    <div class="stat-number">@StateService.DiffInfo.PresentCount</div>
                    <div class="stat-label">Present</div>
                </div>
                <div class="stat-box missing">
                    <div class="stat-number">@StateService.DiffInfo.MissingCount</div>
                    <div class="stat-label">Missing</div>
                </div>
                <div class="stat-box uncertain">
                    <div class="stat-number">@StateService.DiffInfo.UncertainCount</div>
                    <div class="stat-label">Uncertain</div>
                </div>
            </div>
        </div>

        <div class="results-section">
            <h3>Results</h3>
            
            <div class="filter-tabs">
                <button class="tab @(currentFilter == "all" ? "active" : "")" @onclick='() => currentFilter = "all"'>
                    All (@StateService.DiffInfo.Results.Count)
                </button>
                <button class="tab @(currentFilter == "missing" ? "active" : "")" @onclick='() => currentFilter = "missing"'>
                    Missing (@StateService.DiffInfo.MissingCount)
                </button>
                <button class="tab @(currentFilter == "uncertain" ? "active" : "")" @onclick='() => currentFilter = "uncertain"'>
                    Uncertain (@StateService.DiffInfo.UncertainCount)
                </button>
                <button class="tab @(currentFilter == "present" ? "active" : "")" @onclick='() => currentFilter = "present"'>
                    Present (@StateService.DiffInfo.PresentCount)
                </button>
            </div>

            <div class="results-table">
                <table>
                    <thead>
                        <tr>
                            <th>Asset ID</th>
                            <th>Filename</th>
                            <th>Status</th>
                            <th>Reason</th>
                            <th>Matched Path</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var result in GetFilteredResults())
                        {
                            <tr class="status-@result.Status.ToString().ToLower()">
                                <td>@result.SourceAssetId</td>
                                <td>@GetFilename(result)</td>
                                <td>
                                    <span class="status-badge @result.Status.ToString().ToLower()">
                                        @result.Status
                                    </span>
                                </td>
                                <td>@result.Reason</td>
                                <td>@(result.MatchedLocalPath ?? "-")</td>
                            </tr>
                        }
                    </tbody>
                </table>
                
                @if (!GetFilteredResults().Any())
                {
                    <div class="no-results">
                        No results for this filter.
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="empty-state">
            <p>No diff analysis has been performed yet.</p>
            <p>Click the button above to compute differences between remote and local files.</p>
        </div>
    }
</div>

