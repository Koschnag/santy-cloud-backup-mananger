</style>

@code {
    private string currentFilter = "all";

    protected override void OnInitialized()
    {
        StateService.OnChange += StateHasChanged;
    }

    private async Task StartDiff()
    {
        await OperationsService.RunDiffAsync();
    }

    private IEnumerable<DiffResult> GetFilteredResults()
    {
        var results = StateService.DiffInfo.Results;
        
        return currentFilter switch
        {
            "missing" => results.Where(r => r.Status == DiffStatus.Missing),
            "uncertain" => results.Where(r => r.Status == DiffStatus.Uncertain),
            "present" => results.Where(r => r.Status == DiffStatus.Present),
            _ => results
        };
    }

    private string GetFilename(DiffResult result)
    {
        // Try to extract filename from the matched path or use asset ID
        if (!string.IsNullOrEmpty(result.MatchedLocalPath))
        {
            return Path.GetFileName(result.MatchedLocalPath);
        }
        return result.SourceAssetId;
    }

    private async Task ExportResults()
    {
        var results = StateService.DiffInfo.Results;
        var options = new JsonSerializerOptions
        {
            PropertyNamingPolicy = JsonNamingPolicy.CamelCase,
            WriteIndented = false
        };

        var jsonLines = results.Select(r => JsonSerializer.Serialize(r, options));
        var content = string.Join("\n", jsonLines);
        var fileName = $"diff-report-{DateTime.Now:yyyyMMdd-HHmmss}.jsonl";

        // Download file using JavaScript interop
        await JSRuntime.InvokeVoidAsync("downloadFile", fileName, content);
    }

    public void Dispose()
    {
        StateService.OnChange -= StateHasChanged;
    }
}
